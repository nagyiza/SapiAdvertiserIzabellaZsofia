<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="@color/colorWhite">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@color/colorBase"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_creator"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:cropToPadding="false"
                android:src="@drawable/profile_base"
                />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:layout_marginVertical="@dimen/nav_header_vertical_spacing"
                android:layout_marginHorizontal="5dp"
                android:text="Title"
                android:textSize="25dp"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_creator"
            android:text="Advertisement detail"
            android:layout_marginHorizontal="25dp"
            android:textSize="15dp" />

    <ImageView
        android:id="@+id/iv_images"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_below="@id/tv_detail"
        android:src="@mipmap/ic_launcher_round"
        android:layout_margin="5dp"/>
    </LinearLayout>

</RelativeLayout>